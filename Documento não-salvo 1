#include <stdio.h>

int main() {
   int idade; 
   printf("digite sua idade");
   scanf("%d", &idade); 
   if(idade >= 18){
     printf("\n isso é uma festa, divirta-se!");
   }else if(idade >=12){ 
       printf("\n vá beber uma fanta uva na barraquinha!"); 
   }else{
       printf("\n beba chá de camomila!");
   }
   printf("\n a sua idade é %d, idade"); 
   if(idade >= 65){ 
       printf("\n passe na farmácia");
   }
   printf("\n vá para casa dormi!");  
   

    return 0;
}
